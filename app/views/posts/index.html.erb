<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        栞一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @posts.each do |post| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                  <%= link_to post_path(post) do %>
                    <% if post.image.attached? %>
                      <%= image_tag post.image, class: "fit_image" %>
                    <% else %>
                      <%= image_tag "no-image.png", class: "fit_image" %>
                    <% end %>
                  <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                  <% if post.user.profile_image.attached? %>
                    <%= image_tag post.user.profile_image, class: "profile_image is-rounded" %>
                  <% else %>
                    <%= image_tag "no-image_prof.png", class: "profile_image is-rounded" %>
                  <% end %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%=link_to post.user.username, user_path(post.user) %></div>
                </div>
              </div>

              <div class="content">
                <p class="title is-4">進捗 <%= post.progress %>％</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <br>
<div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
        <%= paginate @posts %>
    </div>
  </div>
</section>