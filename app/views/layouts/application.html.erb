<!DOCTYPE html>
<html>
  <head>
    <title>SHIORI</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>


    <nav class="navbar is-success">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title"><%= link_to image_tag("logo.png", alt: "SHIORI logo", style: "height: 25px;"),root_path %></h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
        </div>
      </div>

      <% if user_signed_in? %>
        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to "SHIORI一覧", posts_path, class: "button is-small is-success" %>
          </div>
          <div class="navbar-item">
            <%= link_to "SHIORIを挟む", new_post_path, class: "button is-small is-success" %>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to "ユーザー一覧", users_path, class: "button is-small is-success" %>
                </p>
                <p class="control">
                  <%= link_to "マイページ", user_path(current_user), class: "button is-small is-success" %>
                </p>
                <p class="control">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "button is-small is-success" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% else %>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to "SHIORI一覧", posts_path, class: "button is-small is-success" %>
          </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to "ユーザー一覧", users_path, class: "button is-small is-success" %>
                </p>
                  <p class="control">
                    <%= link_to "ログイン", new_user_session_path, class: "button is-small is-success" %>
                  </p>
                  <p class="control">
                    <%= link_to "新規登録", new_user_registration_path, class: "button is-small is-success" %>
                  </p>
                </div>
              </div>
            </div>
          </div>
      <% end %>

    </nav>
    <%= yield %>
  </body>
</html>